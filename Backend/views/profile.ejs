<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quiz Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      /* Custom animations and gradients */
      .fade-in {
        animation: fadeIn 0.6s ease-out;
      }

      .slide-up {
        animation: slideUp 0.8s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .stat-card {
        transition: all 0.3s ease;
      }

      .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
          0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }

      .info-card {
        transition: all 0.2s ease;
      }

      .info-card:hover {
        background-color: #f8fafc;
        transform: translateX(5px);
      }

      .profile-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }
    </style>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-6xl mx-auto px-4 py-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <i class="fas fa-user-circle text-2xl text-blue-500"></i>
            <span class="text-xl font-semibold text-gray-800"
              >Quiz Profile</span
            >
          </div>
          <div class="flex items-center space-x-4">
            <a
              href="/leaderboard"
              class="flex items-center px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all duration-200"
            >
              <i class="fas fa-trophy mr-2"></i>
              Leaderboard
            </a>
            <a
              href="/"
              class="flex items-center px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all duration-200"
            >
              <i class="fas fa-home mr-2"></i>
              Home
            </a>
          </div>
        </div>
      </div>
    </nav>

    <div class="min-h-screen py-8">
      <div class="max-w-6xl mx-auto px-4">
        <!-- Main Profile Card -->
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden fade-in">
          <!-- Enhanced Profile Header -->
          <div
            class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 p-8 relative overflow-hidden"
          >
            <!-- Decorative background elements -->
            <div
              class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full -translate-y-48 translate-x-48"
            ></div>
            <div
              class="absolute bottom-0 left-0 w-64 h-64 bg-white/5 rounded-full translate-y-32 -translate-x-32"
            ></div>

            <div class="relative z-10">
              <div
                class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0"
              >
                <div
                  class="flex flex-col md:flex-row items-center space-y-4 md:space-y-0 md:space-x-8"
                >
                  <!-- Enhanced Avatar -->
                  <div class="relative">
                    <div
                      class="w-32 h-32 rounded-full bg-gradient-to-r from-white/20 to-white/10 p-1"
                    >
                      <img
                        src="https://ui-avatars.com/api/?name=User&background=random&size=128"
                        alt="User"
                        class="w-full h-full rounded-full border-4 border-white/30 shadow-2xl object-cover"
                      />
                    </div>
                    <!-- Online status indicator -->
                    <div
                      class="absolute bottom-2 right-2 w-6 h-6 bg-green-400 rounded-full border-3 border-white shadow-lg"
                    ></div>
                  </div>

                  <!-- User Info -->
                  <div class="text-center md:text-left">
                    <h1
                      class="text-4xl md:text-5xl font-bold text-white mb-2 tracking-tight"
                    >
                      User Name
                    </h1>
                    <p class="text-white/90 text-lg mb-3">
                      <i class="fas fa-envelope mr-2"></i>
                      user@example.com
                    </p>

                    <!-- Profile badges -->
                    <div
                      class="flex flex-wrap justify-center md:justify-start gap-2"
                    >
                      <span
                        class="profile-badge text-white px-3 py-1 rounded-full text-sm font-medium"
                      >
                        <i class="fas fa-star mr-1"></i>Quiz Master
                      </span>
                      <span
                        class="bg-yellow-500/90 text-white px-3 py-1 rounded-full text-sm font-medium"
                      >
                        <i class="fas fa-trophy mr-1"></i>High Scorer
                      </span>

                      <span
                        class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium"
                      >
                        <i class="fas fa-calendar mr-1"></i>Member
                      </span>
                    </div>
                  </div>
                </div>

                <!-- Action Button -->
                <div class="text-center">
                  <a
                    href="/quiz/start"
                    class="inline-flex items-center px-6 py-3 bg-white text-purple-600 font-semibold rounded-xl hover:bg-gray-50 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                  >
                    <i class="fas fa-play mr-2"></i>
                    Start New Quiz
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Enhanced Profile Content -->
          <div class="p-8">
            <!-- Stats Overview Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 slide-up">
              <div
                class="stat-card bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-2xl border border-blue-200"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <p
                      class="text-blue-600 text-sm font-semibold uppercase tracking-wide"
                    >
                      Quizzes Taken
                    </p>
                    <p class="text-3xl font-bold text-blue-800 mt-1">0</p>
                  </div>
                  <div
                    class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center"
                  >
                    <i class="fas fa-clipboard-check text-white text-xl"></i>
                  </div>
                </div>
              </div>

              <div
                class="stat-card bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-2xl border border-green-200"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <p
                      class="text-green-600 text-sm font-semibold uppercase tracking-wide"
                    >
                      Total Score
                    </p>
                    <p class="text-3xl font-bold text-green-800 mt-1">0</p>
                  </div>
                  <div
                    class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center"
                  >
                    <i class="fas fa-chart-line text-white text-xl"></i>
                  </div>
                </div>
              </div>

              <div
                class="stat-card bg-gradient-to-br from-yellow-50 to-yellow-100 p-6 rounded-2xl border border-yellow-200"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <p
                      class="text-yellow-600 text-sm font-semibold uppercase tracking-wide"
                    >
                      Average Score
                    </p>
                    <p class="text-3xl font-bold text-yellow-800 mt-1">0%</p>
                  </div>
                  <div
                    class="w-12 h-12 bg-yellow-500 rounded-xl flex items-center justify-center"
                  >
                    <i class="fas fa-percentage text-white text-xl"></i>
                  </div>
                </div>
              </div>
            </div>

            <!-- Detailed Information Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Personal Information -->
              <div class="slide-up">
                <div class="flex items-center mb-6">
                  <div
                    class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center mr-3"
                  >
                    <i class="fas fa-user text-white"></i>
                  </div>
                  <h2 class="text-2xl font-bold text-gray-800">
                    Personal Information
                  </h2>
                </div>

                <div class="space-y-4">
                  <div
                    class="info-card p-5 bg-gray-50 rounded-xl border border-gray-200"
                  >
                    <div class="flex items-center justify-between">
                      <div>
                        <p
                          class="text-sm font-medium text-gray-500 uppercase tracking-wide"
                        >
                          Email Address
                        </p>
                        <p class="text-lg font-semibold text-gray-800 mt-1">
                          user@example.com
                        </p>
                      </div>
                      <i class="fas fa-envelope text-gray-400 text-xl"></i>
                    </div>
                  </div>

                  <div
                    class="info-card p-5 bg-gray-50 rounded-xl border border-gray-200"
                  >
                    <div class="flex items-center justify-between">
                      <div>
                        <p
                          class="text-sm font-medium text-gray-500 uppercase tracking-wide"
                        >
                          Phone Number
                        </p>
                        <p class="text-lg font-semibold text-gray-800 mt-1">
                          Not provided
                        </p>
                      </div>
                      <i class="fas fa-phone text-gray-400 text-xl"></i>
                    </div>
                  </div>

                  <div
                    class="info-card p-5 bg-gray-50 rounded-xl border border-gray-200"
                  >
                    <div class="flex items-center justify-between">
                      <div>
                        <p
                          class="text-sm font-medium text-gray-500 uppercase tracking-wide"
                        >
                          Location
                        </p>
                        <p class="text-lg font-semibold text-gray-800 mt-1">
                          Not specified
                        </p>
                      </div>
                      <i
                        class="fas fa-map-marker-alt text-gray-400 text-xl"
                      ></i>
                    </div>
                  </div>

                  <div
                    class="info-card p-5 bg-gray-50 rounded-xl border border-gray-200"
                  >
                    <div class="flex items-center justify-between">
                      <div>
                        <p
                          class="text-sm font-medium text-gray-500 uppercase tracking-wide"
                        >
                          Member Since
                        </p>
                        <p class="text-lg font-semibold text-gray-800 mt-1">
                          Not available
                        </p>
                      </div>
                      <i class="fas fa-calendar-alt text-gray-400 text-xl"></i>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Quiz Performance & Analytics -->
              <div class="slide-up">
                <div class="flex items-center mb-6">
                  <div
                    class="w-10 h-10 bg-yellow-500 rounded-lg flex items-center justify-center mr-3"
                  >
                    <i class="fas fa-trophy text-white"></i>
                  </div>
                  <h2 class="text-2xl font-bold text-gray-800">
                    Quiz Performance
                  </h2>
                </div>

                <div class="space-y-6">
                  <!-- Performance Metrics -->
                  <div
                    class="bg-gradient-to-r from-purple-50 to-pink-50 p-6 rounded-xl border border-purple-200"
                  >
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">
                      Performance Overview
                    </h3>

                    <!-- Progress bars for different metrics -->
                    <div class="space-y-4">
                      <div>
                        <div
                          class="flex justify-between text-sm font-medium text-gray-700 mb-1"
                        >
                          <span>Quiz Completion Rate</span>
                          <span>85%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                          <div
                            class="bg-purple-500 h-2 rounded-full"
                            style="width: 85%"
                          ></div>
                        </div>
                      </div>

                      <div>
                        <div
                          class="flex justify-between text-sm font-medium text-gray-700 mb-1"
                        >
                          <span>Average Score</span>
                          <span> 0% </span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                          <div
                            class="bg-green-500 h-2 rounded-full"
                            id="avgScoreBar"
                            style="width: 0%"
                          ></div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Achievement Section -->
                  <div
                    class="bg-gradient-to-r from-yellow-50 to-orange-50 p-6 rounded-xl border border-yellow-200"
                  >
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">
                      <i class="fas fa-medal mr-2 text-yellow-500"></i>
                      Achievements
                    </h3>

                    <div class="grid grid-cols-2 gap-3">
                      <div class="text-center p-3 bg-white rounded-lg border">
                        <i
                          class="fas fa-fire text-orange-500 text-2xl mb-2"
                        ></i>
                        <p class="text-sm font-medium text-gray-700">
                          Quiz Streak
                        </p>
                        <p class="text-xl font-bold text-orange-600">5 days</p>
                      </div>

                      <div class="text-center p-3 bg-white rounded-lg border">
                        <i class="fas fa-target text-red-500 text-2xl mb-2"></i>
                        <p class="text-sm font-medium text-gray-700">
                          Best Score
                        </p>
                        <p class="text-xl font-bold text-red-600">95%</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-8 pt-8 border-t border-gray-200">
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                  href="/quiz/start"
                  class="flex items-center justify-center px-8 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold rounded-xl hover:from-blue-600 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                >
                  <i class="fas fa-play mr-2"></i>
                  Take Another Quiz
                </a>

                <a
                  href="/profile/edit"
                  class="flex items-center justify-center px-8 py-3 bg-gray-100 text-gray-700 font-semibold rounded-xl hover:bg-gray-200 transition-all duration-200"
                >
                  <i class="fas fa-edit mr-2"></i>
                  Edit Profile
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced JavaScript for interactions -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Add stagger animation to cards
        const cards = document.querySelectorAll(".info-card, .stat-card");
        cards.forEach((card, index) => {
          card.style.animationDelay = `${index * 0.1}s`;
        });

        // Add click animation to stat cards
        document.querySelectorAll(".stat-card").forEach((card) => {
          card.addEventListener("click", function () {
            this.style.transform = "scale(0.95)";
            setTimeout(() => {
              this.style.transform = "";
            }, 150);
          });
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
          anchor.addEventListener("click", function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute("href"));
            if (target) {
              target.scrollIntoView({
                behavior: "smooth",
                block: "start",
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
